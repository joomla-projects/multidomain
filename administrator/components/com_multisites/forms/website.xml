<?xml version="1.0" encoding="utf-8"?>
<form>
	<config>
		<inlinehelp button="show"/>
	</config>
	<fieldset>
		<field
			name="id"
			type="hidden"
			label="JGLOBAL_FIELD_ID_LABEL"
			default="0"
			class="readonly"
			size="10"
			readonly="true"
		/>

		<field
			name="title"
			type="text"
			label="JGLOBAL_TITLE"
			required="true"
			maxlength="255"
		/>

		<field
			name="title_native"
			type="text"
			label="COM_MULTISITES_FIELD_TITLE_NATIVE_LABEL"
			description="COM_MULTISITES_FIELD_TITLE_NATIVE_DESC"
			required="true"
			maxlength="255"
		/>

		<field
			name="alias"
			type="text"
			label="JFIELD_ALIAS_LABEL"
			description="JFIELD_ALIAS_DESC"
			hint="JFIELD_ALIAS_PLACEHOLDER"
		/>

		<field
			name="baseurl"
			type="url"
			label="COM_MULTISITES_FIELD_BASEURL_LABEL"
			description="COM_MULTISITES_FIELD_BASEURL_DESC"
			required="true"
			maxlength="400"
		/>

		<field
			name="image"
			type="filelist"
			label="COM_LANGUAGES_FIELD_IMAGE_LABEL"
			stripext="1"
			directory="media/mod_languages/images/"
			hide_none="1"
			hide_default="1"
			fileFilter="\.gif$"
			validate="options"
		>
			<option value="">JNONE</option>
		</field>

		<field
			name="note"
			type="textarea"
			label="COM_MULTISITES_FIELD_NOTE_LABEL"
			buttons="true"
		/>

		<field
			name="metakey"
			type="text"
			label="COM_MULTISITES_FIELD_METAKEY_LABEL"
			description="COM_MULTISITES_FIELD_METAKEY_DESC"
			maxlength="200"
		/>

		<field
			name="metadesc"
			type="text"
			label="COM_MULTISITES_FIELD_METADESC_LABEL"
			description="COM_MULTISITES_FIELD_METADESC_DESC"
			maxlength="200"
		/>

		<field
			name="image"
			type="media"
			label="COM_MULTISITES_FIELD_IMAGE_LABEL"
		/>

		<field
			name="langcode"
			type="text"
			label="COM_MULTISITES_FIELD_LANGCODE_LABEL"
			description="COM_MULTISITES_FIELD_LANGCODE_DESC"
			maxlength="10"
		/>

		<field
			name="state"
			type="list"
			label="JSTATUS"
			required="true"
			class="form-select-color-state"
			default="1"
			validate="options"
			>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-2">JTRASHED</option>
		</field>
	</fieldset>

	<fieldset name="language" label="COM_MULTISITES_FIELDSET_LANGUAGE">
		<field
			name="image"
			type="filelist"
			label="COM_MULTISITES_FIELD_IMAGE_LABEL"
			stripext="1"
			directory="media/mod_languages/images/"
			hide_none="1"
			hide_default="1"
			fileFilter="\.gif$"
			validate="options"
		>
			<option value="">JNONE</option>
		</field>

		<field
			name="langcode"
			type="text"
			label="COM_MULTISITES_FIELD_LANGCODE_LABEL"
			description="COM_MULTISITES_FIELD_LANGCODE_DESC"
			maxlength="7"
			required="true"
		/>
	</fieldset>

	<fieldset name="metadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
		<field
			name="metadesc"
			type="textarea"
			label="JFIELD_META_DESCRIPTION_LABEL"
			rows="3"
			cols="30"
			maxlength="160"
			charcounter="true"
		/>

		<field
			name="metakey"
			type="textarea"
			label="JFIELD_META_KEYWORDS_LABEL"
			rows="3"
			cols="40"
		/>

		<field
			name="sitename"
			type="text"
			label="COM_MULTISITES_FIELD_SITE_NAME_LABEL"
			filter="string"
		/>
	</fieldset>

	<fieldset name="publishing" label="JGLOBAL_FIELDSET_PUBLISHING">
		<field
			name="created"
			type="calendar"
			label="JGLOBAL_FIELD_CREATED_LABEL"
			translateformat="true"
			showtime="true"
			size="22"
			filter="user_utc"
		/>

		<field
			name="created_by"
			type="user"
			label="JGLOBAL_FIELD_CREATED_BY_LABEL"
			validate="UserId"
		/>

		<field
			name="modified"
			type="calendar"
			label="JGLOBAL_FIELD_MODIFIED_LABEL"
			class="form-control"
			translateformat="true"
			showtime="true"
			size="22"
			readonly="true"
			filter="user_utc"
		/>

		<field
			name="modified_by"
			type="user"
			label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
			class="readonly"
			readonly="true"
			filter="unset"
			validate="UserId"
		/>
	</fieldset>

	<fieldset name="permissions" label="JCONFIG_PERMISSIONS_LABEL">
		<field
			name="asset_id"
			type="hidden"
			filter="unset"
		/>

		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			validate="rules"
			filter="rules"
			component="com_multisites"
			section="website"
			hiddenLabel="true"
		/>
	</fieldset>
</form>
